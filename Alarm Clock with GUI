import tkinter as tk
import datetime
import time

class AlarmClock:
    def __init__(self, master):
        self.master = master
        master.title("Alarm Clock")
        
        self.time_label = tk.Label(master, text="")
        self.time_label.pack()
        
        self.set_time_label = tk.Label(master, text="Set Alarm Time (HH:MM:SS):")
        self.set_time_label.pack()
        
        self.set_time_entry = tk.Entry(master)
        self.set_time_entry.pack()
        
        self.set_alarm_button = tk.Button(master, text="Set Alarm", command=self.set_alarm)
        self.set_alarm_button.pack()
        
        self.cancel_alarm_button = tk.Button(master, text="Cancel Alarm", command=self.cancel_alarm, state=tk.DISABLED)
        self.cancel_alarm_button.pack()
        
        self.update_time()
    
    def update_time(self):
        current_time = datetime.datetime.now().strftime("%H:%M:%S")
        self.time_label.config(text=current_time)
        self.master.after(1000, self.update_time)
        
        if hasattr(self, "alarm_time") and current_time == self.alarm_time:
            self.trigger_alarm()
        
    def set_alarm(self):
        self.alarm_time = self.set_time_entry.get()
        self.set_time_entry.delete(0, tk.END)
        self.set_alarm_button.config(state=tk.DISABLED)
        self.cancel_alarm_button.config(state=tk.NORMAL)
        
    def cancel_alarm(self):
        del self.alarm_time
        self.set_alarm_button.config(state=tk.NORMAL)
        self.cancel_alarm_button.config(state=tk.DISABLED)
    
    def trigger_alarm(self):
        print("ALARM!!!")
        self.cancel_alarm()
    
root = tk.Tk()
alarm_clock = AlarmClock(root)
root.mainloop()
